{
{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js", // ⬅️ Source = src/server.js
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": [
          "package.json",
          "src/**",
          "cron/**",  // ⬅️ Inclus le dossier cron à la racine
          ".env"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/server.js", // ⬅️ Destination = src/server.js
      "methods": [
        "GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"
      ]
    }
  ]
}
